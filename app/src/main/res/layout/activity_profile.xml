<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile_image" />


            <TextView
                android:id="@+id/my_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_image"
                android:text="Profile Name"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/my_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_name"
                android:text="Username"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/my_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_username"
                android:text="Profile status"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/my_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_status"
                android:text="Profile country"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/my_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_country"
                android:text="Profile gender"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/my_profile_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_gender"
                android:text="Profile date of birth"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/my_profile_relationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_dob"
                android:text="Profile relationship status"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="4dp"/>



        </RelativeLayout>

    </ScrollView>




</RelativeLayout>